# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# External API Keys
TRUECALLER_API_KEY=your-truecaller-api-key-here
NUMVERIFY_API_KEY=your-numverify-api-key-here

# Email Configuration (for notifications and verification)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@scam-dunk.com

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# External Services Configuration
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=scam-dunk-files

# Google Cloud Configuration (for additional ML services)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json

# Application Features
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false

# API Simulation Mode (for development/testing)
SIMULATION_MODE=false
MOCK_EXTERNAL_APIS=false

# Database Migration and Seeding
AUTO_MIGRATE=true
SEED_DATABASE=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations
WEBHOOK_TIMEOUT=30000

# Admin Configuration
ADMIN_EMAIL=admin@scam-dunk.com
ADMIN_PASSWORD=change-this-secure-password

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs

# Development Tools
HOT_RELOAD=true
DEBUG_MODE=false