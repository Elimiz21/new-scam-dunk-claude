{
  "extends": ["next/core-web-vitals"],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "playwright-report/",
    "test-results/",
    "playwright/.cache/"
  ],
  "overrides": [
    {
      "files": ["tests/**/*.ts"],
      "env": {
        "node": true
      }
    }
  ],
  "rules": {
    "react/no-unescaped-entities": "off",
    "react-hooks/exhaustive-deps": "off"
  }
}
