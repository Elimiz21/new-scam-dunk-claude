# Scam Dunk AI Service Environment Configuration

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Scam Dunk AI
VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://ocma.dev,https://www.ocma.dev

# Database Configuration
DATABASE_URL=postgresql://scamdunk:scamdunk123@localhost:5432/scamdunk_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_POOL_SIZE=10

# Model Configuration
MODEL_CACHE_DIR=./models/cache
MODEL_UPDATE_INTERVAL=3600
MAX_MODEL_MEMORY=2048

# BERT Configuration
BERT_MODEL_NAME=distilbert-base-uncased
BERT_MAX_LENGTH=512
BERT_BATCH_SIZE=16

# Scam Detection Configuration
SCAM_THRESHOLD=0.7
HIGH_RISK_THRESHOLD=0.9
CONFIDENCE_THRESHOLD=0.6

# Text Processing Configuration
MAX_TEXT_LENGTH=10000
MIN_TEXT_LENGTH=10
SUPPORTED_LANGUAGES=en,es,fr,de,it

# Feature Extraction Configuration
TFIDF_MAX_FEATURES=10000
TFIDF_NGRAM_RANGE=(1,3)
WORD_EMBEDDING_DIM=300

# Risk Scoring Configuration
# JSON format: {"bert": 0.4, "pattern": 0.3, "sentiment": 0.15, "ner": 0.15}
ENSEMBLE_WEIGHTS={"bert": 0.4, "pattern": 0.3, "sentiment": 0.15, "ner": 0.15}

# Background Processing Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
TASK_TIMEOUT=300
MAX_RETRIES=3

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY=
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/scamdunk-ai.log

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Model Training Configuration
TRAINING_DATA_PATH=./data/training
VALIDATION_DATA_PATH=./data/validation
MODEL_SAVE_PATH=./models/custom
TRAINING_BATCH_SIZE=32
LEARNING_RATE=2e-5
NUM_EPOCHS=3