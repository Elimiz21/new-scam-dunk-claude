{
  "name": "scam-dunk",
  "version": "1.0.0",
  "description": "AI-Native Anti-Scam Investment Protection Platform",
  "private": true,
  "scripts": {
    "build": "cd packages/web && npm install --legacy-peer-deps --include=dev && npm run build",
    "dev": "cd packages/web && npm run dev",
    "web:dev": "cd packages/web && npm run dev",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "npm --prefix packages/api run lint",
    "lint:web": "npm --prefix packages/web run lint",
    "test": "npm run test:api && npm run test:web",
    "test:api": "npm --prefix packages/api test",
    "test:web": "npm --prefix packages/web run test:e2e",
    "ci": "npm run lint && npm run test",
    "postinstall": "echo 'Skipping postinstall'"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.11.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io-client": "^4.8.1"
  }
}
