{
  "buildCommand": "cd packages/web && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "packages/web/.next",
  "installCommand": "echo 'Skip root install'",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://ocma.dev",
    "NEXT_PUBLIC_API_URL": "https://api.ocma.dev",
    "NEXT_PUBLIC_WS_URL": "wss://api.ocma.dev",
    "NODE_ENV": "production"
  },
  "functions": {
    "packages/web/app/**/*.ts": {
      "maxDuration": 10
    },
    "packages/web/app/**/*.tsx": {
      "maxDuration": 10
    }
  }
}