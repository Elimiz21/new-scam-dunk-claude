{
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "outputDirectory": ".next",
  "installCommand": "cd packages/web && npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://scam-dunk-production.vercel.app",
    "NEXT_PUBLIC_API_URL": "https://scam-dunk-production.vercel.app/api",
    "NEXT_PUBLIC_WS_URL": "wss://scam-dunk-production.vercel.app",
    "NODE_ENV": "production"
  },
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 10
    },
    "app/**/*.tsx": {
      "maxDuration": 10
    }
  },
  "root": "packages/web"
}